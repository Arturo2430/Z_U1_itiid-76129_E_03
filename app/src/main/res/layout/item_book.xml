<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="1dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutline"
    app:rippleColor="?attr/colorControlHighlight" android:background="?attr/colorSurface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="72dp"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvTitle"
            style="?attr/textAppearanceTitleMedium"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/chipStatus"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginEnd="8dp"
            tools:text="Clean Architecture"  android:textColor="?attr/colorPrimary"/>

        <TextView
            android:id="@+id/tvAuthor"
            style="?attr/textAppearanceBodyMedium"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            tools:text="Robert C. Martin"  android:textColor="?attr/colorPrimary"/>

        <TextView
            android:id="@+id/tvDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" â€¢ "
            android:importantForAccessibility="no"
            app:layout_constraintStart_toEndOf="@id/tvAuthor"
            app:layout_constraintBaseline_toBaselineOf="@id/tvAuthor" />

        <TextView
            android:id="@+id/tvGenre"
            style="?attr/textAppearanceBodyMedium"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tvDot"
            app:layout_constraintEnd_toStartOf="@id/chipStatus"
            app:layout_constraintBaseline_toBaselineOf="@id/tvAuthor"
            tools:text="Software Engineering" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:checkable="false"
            android:textAllCaps="false"
            app:chipMinHeight="28dp"
            android:textAppearance="?attr/textAppearanceLabelLarge"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Available"
            tools:contentDescription="Availability status" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
